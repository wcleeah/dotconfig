# use ctrl-t as the prefix key
set -g prefix C-t
unbind C-b

# Allows sending a literal Ctrl+t to the terminal/tmux
bind C-t send-prefix

# Display pop-up related
# Open a zsh pop-up
bind z display-popup \
  -d "#{pane_current_path}" \
  -w 75% \
  -h 75% \
  -E "zsh"

# Open a pop-up that runs node
bind j display-popup \
  -d "#{pane_current_path}" \
  -w 75% \
  -h 75% \
  -E "node"

# Open a pop-up that runs lazygit
bind l display-popup \
  -d "#{pane_current_path}" \
  -w 75% \
  -h 75% \
  -E "source ~/.zshrc && lazygit"
