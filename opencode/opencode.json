{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "context7": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "{env:CONTEXT7_API_KEY}"
            ],
            "enabled": true
        },
        "playwriter": {
            "type": "local",
            "command": ["npx", "playwriter@latest"],
            "enabled": true
        },
        "grepapp": {
            "type": "remote",
            "enabled": true,
            "url": "https://mcp.grep.app"
        }
    }
}
